{
    "name": "dinero-main-api",
    "version": "3.1.0",
    "private": true,
    "scripts": {
        "start": "node ./dist/bin/www",
        "start-local": "NODE_ENV=development npm run start",
        "build": "npm run compile",
        "build:ts": "npx tsc",
        "compile": "npm run build:ts",
        "prettier:check": "prettier --check \"./**/*.{js,ts,tsx,json,scss,md}\"",
        "prettier:write": "prettier --write \"./**/*.{js,ts,tsx,json,scss,md}\"",
        "up": "node ./upload.js",
        "pack": "node ./pack.js",
        "release": "node ./release.js",
        "patch": "./scripts/bump-patch.sh",
        "minor": "./scripts/bump-minor.sh",
        "major": "./scripts/bump-major.sh",
        "test": "jest --no-cache",
        "test:jest": "npm run tests -- --coverage --no-cache",
        "test:watch": "npm run tests -- --watch --no-cache",
        "test:cover:watch": "npm run tests -- --coverage --watch --no-cache"
    },
    "jest": {
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.ts"
        ],
        "coverageDirectory": "<rootDir>/test_coverage_dir",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "roots": [
            "<rootDir>",
            "<rootDir>/src/"
        ],
        "moduleNameMapper": {
            "@root/(.*)": "<rootDir>/$1",
            "@utils/(.*)": "<rootDir>/src/utils/$1",
            "@models/(.*)": "<rootDir>/src/models/$1",
            "@controllers/(.*)": "<rootDir>/src/controllers/$1",
            "@mock/(.*)": "<rootDir>/src/test/mock/$1"
        },
        "modulePaths": [
            "<rootDir>/src/"
        ],
        "moduleDirectories": [
            ".",
            "src",
            "src/util",
            "node_modules"
        ],
        "setupFiles": [
            "<rootDir>/jest-setup/index.js"
        ],
        "testPathIgnorePatterns": [
            "<rootDir>/node_modules",
            "<rootDir>/dist"
        ],
        "testRegex": ".*\\.(spec|test)\\.(ts|js)$",
        "transform": {
            "^.+\\.(ts|tsx)?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "<rootDir>/node_modules"
        ]
    },
    "dependencies": {
        "bluebird": "^3.7.2",
        "body-parser": "^1.20.4",
        "cookie-parser": "~1.4.7",
        "cors": "^2.8.5",
        "debug": "~2.6.9",
        "express": "~4.16.4",
        "fs": "0.0.1-security",
        "grunt": "^1.6.1",
        "grunt-bump": "^0.8.0",
        "grunt-cli": "^1.5.0",
        "guid-typescript": "^1.0.9",
        "http-errors": "^1.8.1",
        "jest": "^26.6.3",
        "module-alias": "^2.2.3",
        "moment": "^2.30.1",
        "morgan": "^1.10.1",
        "multiparty": "^4.2.3",
        "node-ts": "^5.1.2",
        "password-hash": "^1.2.2",
        "prettier": "^1.19.1",
        "ts-postgres": "1.1.0",
        "tsutils": "^3.21.0",
        "winston": "^3.19.0",
        "zip-folder": "^1.0.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@types/node": "^12.20.55",
        "eslint": "^4.19.1",
        "ts-jest": "^26.5.6",
        "tslint": "^5.20.1",
        "typescript": "^4.9.5"
    },
    "_moduleAliases": {
        "@root": "dist",
        "@src": "dist/src",
        "@models": "dist/src/models",
        "@routes": "dist/src/routes",
        "@utils": "dist/src/utils",
        "@controllers": "dist/src/controllers",
        "@mock": "dist/src/test/mock"
    }
}
